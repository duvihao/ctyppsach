@model ctyppsachmvc.Models.dailycongnoviewmodel

@{
    ViewBag.Title = "Index";
}

<h2>Công nợ theo thời gian</h2>
@using (Html.BeginForm("Index", "congnotheothoigians", FormMethod.Get))
{
    <div class="form-inline">
        @Html.Label("Thời điểm")
        <div class="form-group input-group-sm">
            @Html.TextBox("thoidiem", null, new { @class = "form-control datepicker", placeholder = "Enter Drop-off date here...", autocomplete = "off" })
        </div>
        @Html.Label("Tên đại lý")
        <div class="form-group">
            @Html.DropDownList("iddl", null, htmlAttributes: new { @class = "form-control", @id = "item" })
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Index" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>Thời điểm</th>
        <th>
            @Html.DisplayName("Đại lý")
        </th>
        <th>
            @Html.DisplayName("Công nợ")
        </th>
    </tr>

@foreach (var item in Model.daily) {
    <tr>
        <td>@Html.DisplayFor(o => o.dt)</td>
        <td>
            @Html.DisplayFor(modelItem => item.tendl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.congno)
        </td>
    </tr>
}

</table>
