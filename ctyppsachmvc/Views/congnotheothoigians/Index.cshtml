@model IEnumerable<ctyppsachmvc.Models.congnotheothoigian>

@{
    ViewBag.Title = "Index";
}

<h2>Công nợ theo thời gian</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Thời điểm")
        </th>
        <th>
            @Html.DisplayName("Đại lý")
        </th>
        <th>
            @Html.DisplayName("Công nợ")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.thoidiem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.daily.tendl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.congno)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
